<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="HatBase" MayRequire="pphhyy.LightlessEmpyrean">
    <defName>Apparel_EtherealHood</defName>
    <label>Ethereal Hood</label>
    <description>A hood made from a translucent plant material that provides the wearer with decent sight even when the hood is covering their face.</description>
	<recipeMaker>
	 <recipeUsers Inherit="False">
        <li>pphhyy_YoroiBench</li>
      </recipeUsers>
	  <researchPrerequisite>pphhyy_BasicArmor</researchPrerequisite>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <workSkill>Crafting</workSkill>
      <displayPriority>220</displayPriority>
    </recipeMaker>
    <graphicData>
      <texPath>Apperal/EtherealHood/EtherealHood</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconScale>1.3</uiIconScale>
    <statBases>
	  <WorkToMake>2000</WorkToMake>
      <MaxHitPoints>80</MaxHitPoints>
      <MarketValue>250</MarketValue>
      <Mass>1.0</Mass>
      <Flammability>1.2</Flammability>
      <ArmorRating_Sharp>0.36</ArmorRating_Sharp>
      <ArmorRating_Blunt>0</ArmorRating_Blunt>
      <ArmorRating_Heat>0.18</ArmorRating_Heat>
      <Insulation_Cold>18</Insulation_Cold>
      <Insulation_Heat>18</Insulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
	<costList>
      <pphhyy_LightlessEmpyrean_EtherealCloth>20</pphhyy_LightlessEmpyrean_EtherealCloth>
    </costList>
    <smeltable>false</smeltable>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Apperal/EtherealHood/EtherealHood</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
    </apparel>
    <tradeTags>
      <li>Clothing</li>
    </tradeTags>
  </ThingDef>
  
