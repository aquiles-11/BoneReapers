<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="HatMakeableBase">
		<defName>Apparel_ThetesHelm</defName>
		<label>Thetes Helm</label>
		<description>A Thetes first armor piece, made from stolen bones and salvaged metal. They seek to bring upon the Eternal War, a never-ending supply of bone, and tithes. Bringing in a better age for humanity, one where they can peacefully die by their lords of bone.</description>
		<graphicData>
			<texPath>Armor/ThetesHelm/ThetesHelm</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<tradeability>Sellable</tradeability>
		<costStuffCount>80</costStuffCount>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<WorkToMake>6500</WorkToMake>
			<Mass>3</Mass>
			<StuffEffectMultiplierArmor>0.73</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>2.5</EquipDelay>
		</statBases>
    <thingCategories Inherit='False'>
      <li>ArmorHeadgear</li>
    </thingCategories>
	<costList>
      <pphhyy_HumanBones>10</pphhyy_HumanBones>
    </costList>
	<randomStyleChance>0.8</randomStyleChance>
    <randomStyle>
      <li>
        <styleDef>ThetesHelmStyle1</styleDef>
	  </li>
	  <li>
		<styleDef>ThetesHelmStyle2</styleDef>
	  </li>
	  <li>
		<styleDef>ThetesHelmStyle3</styleDef>
	  </li>
	  <li>
		<styleDef>ThetesHelmStyle4</styleDef>
	  </li>
	  <li>
		<styleDef>ThetesHelmStyle5</styleDef>
	  </li>
    </randomStyle>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Armor/ThetesHelm/ThetesHelm</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>MedievalMilitary</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		    <useWornGraphicMask>true</useWornGraphicMask>
		</apparel>
		<recipeMaker>
			<researchPrerequisite>pphhyy_BasicArmor</researchPrerequisite>
			<skillRequirements>
				<Crafting>6</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
             <li>pphhyy_YoroiBench</li>
			</recipeUsers>
		</recipeMaker>
	</ThingDef>
	
