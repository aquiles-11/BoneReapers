<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>pphhyy_BoneMoldSteel</defName>
    <label>bone mold</label>
    <description>Bones Fused with Steel for a stronger alloy, While great for fortifications and blunt weapons it is not recommended for sharp or piercing weapons. Most of a BoneReaper Colony will be constructed with BoneMold, meaning hundreds if not thousands of creatures gave themselves to its construction.</description>
    <graphicData>
      <texPath>Resources/Metals/BoneMoldSteel</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <drawSize>1.5</drawSize>
    </graphicData>
    <statBases>
      <MarketValue>12</MarketValue>
      <Mass>1.5</Mass>
      <StuffPower_Armor_Sharp>1.3</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.6</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.65</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>3</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>0</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>0.9</SharpDamageMultiplier>
      <BluntDamageMultiplier>1.6</BluntDamageMultiplier>
    </statBases>
    <useHitPoints>false</useHitPoints>
    <healthAffectsPrice>false</healthAffectsPrice>    
    <stuffProps>
      <categories>
        <li>Metallic</li>
      </categories>
      <appearance>Metal</appearance>
      <commonality>0.05</commonality>
      <color>(196,162,120)</color>
      <constructEffect>ConstructMetal</constructEffect>
      <soundImpactBullet>BulletImpact_Metal</soundImpactBullet>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <soundImpactMelee>Pawn_Melee_Punch_HitBuilding_Metal</soundImpactMelee>
      <statFactors>
        <MaxHitPoints>2.3</MaxHitPoints>
        <WorkToMake>1.9</WorkToMake>
        <WorkToBuild>1.9</WorkToBuild>
        <Beauty>0.5</Beauty>
        <Flammability>0.0</Flammability>
        <DoorOpenSpeed>1</DoorOpenSpeed>
        <MeleeWeapon_CooldownMultiplier>1.0</MeleeWeapon_CooldownMultiplier>
      </statFactors>
    </stuffProps>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <allowedArchonexusCount>80</allowedArchonexusCount>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <stackLimit>75</stackLimit>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <thingSetMakerTags>
      <li>Manufactured</li>
    </thingSetMakerTags>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>    
  </ThingDef>

  <RecipeDef>
    <defName>pphhyy_MakeBoneMoldSteel</defName>
    <label>craft bone mold steel</label>
    <description>Craft bone mold steel from bones and steel.</description>
    <jobString>Harvesting.</jobString>
    <workAmount>6000</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <uiIconThing>pphhyy_BoneMoldSteel</uiIconThing>
	  <recipeUsers>
        <li>pphhyy_AnkylosisTable</li>
	  </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>pphhyy_HumanBones</li>
            <li>pphhyy_AnimalBones</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
        <li>pphhyy_HumanBones</li>
        <li>pphhyy_AnimalBones</li>
      </thingDefs>
    </fixedIngredientFilter>
	<products>
		  <pphhyy_BoneMoldSteel>50</pphhyy_BoneMoldSteel>
	</products>
  <researchPrerequisite>pphhyy_BoneMoldSteel</researchPrerequisite>
  </RecipeDef>

