<?xml version="1.0" encoding="UTF-8"?>

<Defs>

    <PawnKindDef Name="pphhyy_BoneReapers_Pawnkind_Player_Base" Abstract="True">
      <race>Human</race>
      <maxGenerationAge>60</maxGenerationAge>
      <useFactionXenotypes>false</useFactionXenotypes>
      <apparelIgnoreSeasons>True</apparelIgnoreSeasons>
      <apparelIgnorePollution>True</apparelIgnorePollution>
      <requiredWorkTags>
        <li>Violent</li>
      </requiredWorkTags>
    </PawnKindDef>
  
    <!-- Sepelire -->
  
    <PawnKindDef ParentName="pphhyy_BoneReapers_Pawnkind_Player_Base">
      <defName>pphhyy_BoneReapers_Sepelire_Player</defName>
      <fixedGender>Male</fixedGender>
      <label>sepelire</label>
      <xenotypeSet>
        <xenotypeChances>
          <pphhyy_BoneReaper_Sepelire>999</pphhyy_BoneReaper_Sepelire>
        </xenotypeChances>
      </xenotypeSet>
      <combatPower>45</combatPower>
      <itemQuality>Poor</itemQuality>
      <gearHealthRange>0.5~1.8</gearHealthRange>
      <disallowedTraits>
        <li>Brawler</li>
      </disallowedTraits>
      <requiredWorkTags>
        <li>Violent</li>
      </requiredWorkTags>
      <initialWillRange>1~3</initialWillRange>
      <initialResistanceRange>17~27</initialResistanceRange>
      <modExtensions> <!--  this stops the relationship bug from happening, add it to every pawn kind -->
         <li Class="NoInitialRelationships.NoInitialRelationships" />
      </modExtensions>
    </PawnKindDef>
    
